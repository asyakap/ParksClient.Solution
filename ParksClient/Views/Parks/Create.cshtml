@{
  ViewData["Title"] = "Create Park";
}

@model ParksClient.Models.Park

<h4>Add a new park</h4>

<div class="container">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Location)
    @Html.TextBoxFor(model => model.Location)
    <br>
    @Html.LabelFor(model => model.Details)
    @Html.TextBoxFor(model => model.Details)
    <br>
    @Html.LabelFor(model => model.InterestingFacts)
    @Html.TextBoxFor(model => model.InterestingFacts)
    <br>
    @Html.LabelFor(model => model.PopularSights)
    @Html.TextBoxFor(model => model.PopularSights)
    <br>
    <br>
    <input type="submit" value="Save" class="btn btn-primary"/>
  }
  
  <br>
  <p>@Html.ActionLink("Back to all parks", "Index")</p>
  
</div>
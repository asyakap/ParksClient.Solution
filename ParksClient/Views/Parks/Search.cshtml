
@{
  ViewData["Title"] = "Parks";
}
@using ParksClient.Models;
@using System.Collections.Generic;
@model List<ParksClient.Models.Park>;

<div class="container">
  <h1>All Parks:</h1>

  <h3>Your Search Results:</h3>
  @if (Model.Count == 0)
  {
    <p> No parks match this search </p>
  }
  else
  {
    <ol>
      @foreach (Park park in Model)
      {
        <li><strong><a href="/Parks/Details/@(park.ParkId)">@park.Name</a></strong> - @park.Location</li>
      }
    </ol>
  }
<p>@Html.ActionLink("Return to all parks", "Index")</p>
</div>